<script>
    var app = {

        toggleNav: function () {

            $('nav').toggleClass('open');

        },


        hideNav: function () {

            $('nav').removeClass('open');
            $('nav').scrollTop(0);

        }

    };

    $('nav .menu-control').on('click', function (e) {

        app.toggleNav();

    });

    $('.lines-button.x').on('click', function (e) {

        $('.lines-button.x').toggleClass('open');

    });

    $(window).on('click', function (e) {

        var $tar = $(e.target);

        if (!$tar.is($('nav'))) {

            var hasParent = false;

            var $p = $tar.parents();
            for (var i = 0; i < $p.length; i++) {

                if (!hasParent && $($p.get(i)).is($('nav'))) {

                    hasParent = true;

                }

            }

            if (!hasParent) {

                app.hideNav();

            }

        }

    });
</script>

